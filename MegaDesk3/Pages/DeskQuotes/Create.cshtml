@page
@using System.Linq
@using MegaDesk3.Models
@model MegaDesk3.Pages.DeskQuotes.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="DeskQuote.CustomerName" class="control-label"></label>
				<input asp-for="DeskQuote.CustomerName" class="form-control" />
				<span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeskQuote.Desk.Depth" class="control-label"></label>
				<input asp-for="DeskQuote.Desk.Depth" class="form-control" />
				<span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeskQuote.Desk.Width" class="control-label"></label>
				<input asp-for="DeskQuote.Desk.Width" class="form-control" />
				<span asp-validation-for="DeskQuote.Desk.Width" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeskQuote.Desk.NumberOfDrawers" class="control-label"></label>
				<input asp-for="DeskQuote.Desk.NumberOfDrawers" class="form-control" />
				<span asp-validation-for="DeskQuote.Desk.NumberOfDrawers" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeskQuote.Desk.SurfaceMaterial" class="control-label"></label>
				<select asp-for="SelectedMaterial" asp-items="Model.SurfaceMaterials" class="form-control"></select>
				<span asp-validation-for="DeskQuote.Desk.SurfaceMaterial" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DeskQuote.RushOrderType" class="control-label"></label>
				<select asp-for="DeskQuote.RushOrderType" asp-items="@Html.GetEnumSelectList( typeof( RushOrderType ) )" class="form-control"></select>
				<span asp-validation-for="DeskQuote.RushOrderType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync( "_ValidationScriptsPartial" );}
}
